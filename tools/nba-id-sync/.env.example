# PostgreSQL connection
# Option A: full connection string
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME

# Option B: separate fields (used if DATABASE_URL is empty)
PGHOST=localhost
PGPORT=5432
PGDATABASE=your_db
PGUSER=your_user
PGPASSWORD=your_password

# balldontlie API key (optional)
# Se no seu ambiente a API pedir chave, preencha aqui.
BALLDONTLIE_API_KEY=

# Behavior
SLEEP_MS=400
BATCH_SIZE=100
DRY_RUN=0

# Optional overrides (only if your schema uses different identifiers)
# PLAYERS_TABLE=players
# NAME_COLUMN=name
# NBA_ID_COLUMN=nba_player_id
